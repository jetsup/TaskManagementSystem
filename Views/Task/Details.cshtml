@model TaskModel

@{
    ViewData["Title"] = "Task Details";
}

<h1>Task Details</h1>

<div>
    <h4>Task</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsCompleted)
            {
                <span class="text-success">Completed</span>
            }
            else
            {
                <span class="text-danger">Not Completed</span>
            }
        </dd>
        <dt class="col-sm-2">
            Deadline
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToShortDateString()
        </dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
<a asp-action="Items">Back to List</a>
